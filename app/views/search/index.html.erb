<div class="min-h-screen bg-ocean-900 relative overflow-hidden">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-32 h-32 border-2 border-mint-400 rotate-45"></div>
    <div class="absolute top-32 right-20 w-24 h-24 border-2 border-coral-400 rotate-12"></div>
    <div class="absolute bottom-20 left-1/4 w-28 h-28 border-2 border-wave-400 -rotate-12"></div>
    <div class="absolute bottom-40 right-10 w-20 h-20 border-2 border-mint-400 rotate-45"></div>
  </div>
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-ocean-700/5 to-transparent bg-repeat-y opacity-30" style="background-size: 100% 4px;"></div>
  
  <div class="container mx-auto px-4 py-8 relative z-10">
    <div class="max-w-6xl mx-auto">
      
      <!-- Header Section -->
      <header class="text-center mb-12">
        <h1 class="text-4xl md:text-6xl font-black mb-6 uppercase tracking-wider">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-coral-500 via-mint-500 to-ocean-600 transform -skew-x-6 inline-block">
            SEARCH FOR
          </span>
          <br>
          <span class="text-3xl md:text-5xl text-wave-100 font-black tracking-widest transform skew-x-3 inline-block">
            YOUR PROFILE
          </span>
        </h1>
        <div class="w-32 h-1 bg-gradient-to-r from-coral-500 to-mint-500 mx-auto mb-4"></div>
        <p class="text-wave-300 text-lg font-semibold italic">Find yourself in the legendary archive!</p>
      </header>

      <!-- Search Box -->
      <div class="bg-gradient-to-r from-coral-500 via-mint-500 to-ocean-500 p-1 rounded-2xl shadow-2xl mb-8">
        <div class="bg-wave-100 rounded-xl p-6">
          <div class="mb-6">
            <label class="block text-lg font-black text-ocean-900 mb-4 uppercase tracking-wide">
              üîç SEARCH FOR YOUR NAME
            </label>
            <input type="text" id="profile-search" placeholder="Start typing your name..." 
                   class="w-full px-4 py-3 border-4 border-coral-400 rounded-lg text-ocean-900 font-bold placeholder-ocean-500 focus:border-coral-600 focus:outline-none shadow-lg">
            <p class="text-xs text-ocean-600 font-semibold mt-2">Type any part of your name to filter the list below</p>
          </div>
        </div>
      </div>

      <!-- Stats -->
      <div class="text-center mb-8">
        <div class="bg-gradient-to-r from-mint-400 to-ocean-400 p-1 rounded-xl inline-block">
          <div class="bg-wave-100 rounded-lg px-6 py-3">
            <span class="text-2xl font-black text-ocean-900 uppercase tracking-wider">
              <%= @profiles.count %> UNCLAIMED LEGENDS
            </span>
          </div>
        </div>
      </div>

      <!-- Profiles Grid -->
      <div id="profiles-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @profiles.each do |profile| %>
          <div class="profile-card bg-gradient-to-r from-coral-500 via-mint-500 to-ocean-500 p-1 rounded-2xl shadow-2xl hover:shadow-coral-500/50 transform hover:scale-105 transition-all duration-300" 
               data-name="<%= "#{profile.first_name} #{profile.last_name} #{profile.username} #{profile.import_name}".downcase %>">
            <div class="bg-wave-100 rounded-xl p-6 h-full flex flex-col">
              
              <!-- Profile Avatar -->
              <div class="text-center mb-4 flex-shrink-0">
                <div class="inline-flex items-center justify-center w-16 h-16 mb-3 bg-gradient-to-br from-wave-100 to-wave-200 rounded-full border-4 border-coral-500 shadow-xl">
                  <div class="text-xl">üèÑ‚Äç‚ôÇÔ∏è</div>
                </div>
                
                <h3 class="text-lg font-black text-ocean-900 mb-1 uppercase tracking-wider">
                  <%= profile.first_name %> <%= profile.last_name %>
                </h3>
                <p class="text-sm text-coral-600 font-bold mb-2">@<%= profile.username %></p>
                
                <% if profile.countries.any? %>
                  <p class="text-xs text-ocean-600 font-semibold mb-2">
                    üåç <%= profile.countries.map(&:name).join(', ') %>
                  </p>
                <% end %>
                
                <% if profile.import_location.present? %>
                  <p class="text-xs text-ocean-500 font-medium mb-3">
                    üìç From <%= profile.import_location %>
                  </p>
                <% end %>

                <!-- Profile Type Badges -->
                <div class="flex justify-center gap-1 mb-4">
                  <% if profile.is_rider %>
                    <span class="bg-coral-500 text-white px-2 py-1 text-xs font-black uppercase tracking-wider rounded-full">
                      üèÑ‚Äç‚ôÇÔ∏è
                    </span>
                  <% end %>
                  <% if profile.is_photographer %>
                    <span class="bg-mint-500 text-white px-2 py-1 text-xs font-black uppercase tracking-wider rounded-full">
                      üì∏
                    </span>
                  <% end %>
                </div>
              </div>

              <!-- Claim Button -->
              <div class="text-center mt-auto">
                <%= form_with url: search_claim_path(profile), method: :patch, local: true, class: "w-full" do |form| %>
                  <%= form.submit "ü§ô THAT'S ME!", 
                      class: "w-full bg-coral-500 hover:bg-coral-600 text-white py-2 px-3 text-xs font-black uppercase tracking-wider text-center shadow-xl hover:shadow-2xl transform hover:-translate-y-1 hover:rotate-1 transition-all duration-300 border-4 border-coral-400 cursor-pointer",
                      data: { confirm: "Are you sure this is your profile?" } %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- No Results Message -->
      <div id="no-results" class="hidden text-center py-12">
        <div class="bg-gradient-to-r from-ocean-500 to-wave-500 p-1 rounded-2xl shadow-2xl max-w-md mx-auto">
          <div class="bg-wave-100 rounded-xl p-8">
            <div class="text-6xl mb-4">ü§∑‚Äç‚ôÇÔ∏è</div>
            <h3 class="text-2xl font-black text-ocean-900 mb-4 uppercase tracking-wider">
              NO MATCHES FOUND
            </h3>
            <p class="text-ocean-700 font-bold mb-6">
              Try a different search term or create a new profile if you're not in our imported archive.
            </p>
            <%= link_to new_profile_path, 
                class: "bg-coral-500 hover:bg-coral-600 text-white py-3 px-6 text-lg font-black uppercase tracking-wider shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 border-4 border-coral-400 no-underline" do %>
              SETUP NEW PROFILE
            <% end %>
          </div>
        </div>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-12">
        <%= link_to root_path, 
            class: "bg-ocean-500 hover:bg-ocean-600 text-white py-3 px-6 text-lg font-black uppercase tracking-wider shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 border-4 border-ocean-400 no-underline" do %>
          ‚Üê BACK TO HOME
        <% end %>
      </div>

    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('profile-search');
    const profileCards = document.querySelectorAll('.profile-card');
    const noResults = document.getElementById('no-results');
    const profilesContainer = document.getElementById('profiles-container');

    function filterProfiles() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      let visibleCount = 0;

      profileCards.forEach(card => {
        const profileName = card.getAttribute('data-name');
        const isVisible = searchTerm === '' || profileName.includes(searchTerm);
        
        if (isVisible) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      // Show/hide no results message
      if (visibleCount === 0 && searchTerm !== '') {
        noResults.classList.remove('hidden');
        profilesContainer.style.display = 'none';
      } else {
        noResults.classList.add('hidden');
        profilesContainer.style.display = 'grid';
      }
    }

    searchInput.addEventListener('input', filterProfiles);
  });
</script>