<div class="min-h-screen bg-gray-900 relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-20 w-64 h-1 bg-ocean-400"></div>
    <div class="absolute top-40 right-32 w-48 h-1 bg-ocean-500"></div>
    <div class="absolute bottom-32 left-1/3 w-56 h-1 bg-ocean-400"></div>
  </div>
  
  <div class="container mx-auto px-4 py-8 relative z-10">
    
    <!-- Header -->
    <header class="text-center mb-16">
      <%= link_to root_path, class: "inline-block" do %>
        <div class="inline-flex items-center justify-center w-20 h-20 mb-8 bg-ocean-600 shadow-lg relative overflow-hidden">
          <%= image_tag "logo.png", class: "w-12 h-12 relative z-10", alt: "Bodyboard Archive Logo" %>
        </div>
      <% end %>
      
      <h1 class="text-3xl md:text-4xl font-bold mb-6 uppercase tracking-wide text-white">
        <span class="block mb-2">
          Welcome
        </span>
        <span class="text-2xl md:text-3xl text-ocean-400 font-medium tracking-wide block">
          Back
        </span>
      </h1>
    </header>

    <!-- Main Form Card -->
    <div class="max-w-md mx-auto">
      <div class="bg-gray-800 border border-gray-700 shadow-xl mb-8">
        <div class="p-8">
          
          <!-- Form Header -->
          <div class="text-center mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-white uppercase tracking-wide mb-4">
              Sign In
            </h2>
            <div class="w-16 h-0.5 bg-ocean-400 mx-auto mb-4"></div>
            <p class="text-gray-400 font-medium">Access your account to continue</p>
          </div>

          <!-- Flash Messages -->
          <% if notice %>
            <div class="mb-6 p-4 bg-ocean-600 border border-ocean-500">
              <p class="text-white font-medium text-sm"><%= notice %></p>
            </div>
          <% end %>
          
          <% if alert %>
            <div class="mb-6 p-4 bg-red-700 border border-red-600">
              <p class="text-red-200 font-medium text-sm"><%= alert %></p>
            </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

            <!-- Email Field -->
            <div>
              <%= f.label :email, class: "block text-white font-semibold text-sm mb-2" %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email",
                  class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 text-white font-medium placeholder-gray-400 focus:border-ocean-500 focus:outline-none transition-colors duration-200",
                  placeholder: "your.email@example.com" %>
            </div>

            <!-- Password Field -->
            <div>
              <%= f.label :password, class: "block text-white font-semibold text-sm mb-2" %>
              <%= f.password_field :password, 
                  autocomplete: "current-password",
                  class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 text-white font-medium placeholder-gray-400 focus:border-ocean-500 focus:outline-none transition-colors duration-200",
                  placeholder: "Enter your password" %>
            </div>

            <!-- Remember Me -->
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "w-4 h-4 text-ocean-500 bg-gray-700 border border-gray-600 rounded focus:ring-ocean-500 focus:ring-2" %>
                <%= f.label :remember_me, "Keep me signed in", class: "ml-3 text-gray-300 font-medium text-sm" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="pt-4">
              <%= f.submit "Sign In", class: "w-full bg-ocean-600 hover:bg-ocean-500 text-white px-6 py-4 text-lg font-semibold uppercase tracking-wide shadow-lg transition-colors duration-200 cursor-pointer" %>
            </div>
          <% end %>

          <!-- Links -->
          <div class="mt-6 pt-6 border-t border-gray-600">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
      
      <!-- Back to Home -->
      <div class="text-center">
        <%= link_to root_path, class: "text-gray-400 hover:text-white font-medium text-sm transition-colors duration-200" do %>
          ‚Üê Back to Archive
        <% end %>
      </div>
      
    </div>
  </div>
</div>
