<div class="min-h-screen bg-ocean-900 relative overflow-hidden">
  <!-- Y2K Tech Pattern Background -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-32 h-32 border-2 border-mint-400 rotate-45"></div>
    <div class="absolute top-32 right-20 w-24 h-24 border-2 border-coral-400 rotate-12"></div>
    <div class="absolute bottom-20 left-1/4 w-28 h-28 border-2 border-wave-400 -rotate-12"></div>
    <div class="absolute bottom-40 right-10 w-20 h-20 border-2 border-mint-400 rotate-45"></div>
  </div>
  
  <!-- Scan Lines Effect -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-ocean-700/5 to-transparent bg-repeat-y opacity-30" style="background-size: 100% 4px;"></div>
  
  <div class="container mx-auto px-4 py-8 relative z-10">
    
    <!-- Header -->
    <header class="text-center mb-12">
      <%= link_to root_path, class: "inline-block" do %>
        <div class="inline-flex items-center justify-center w-24 h-24 mb-6 bg-gradient-to-br from-wave-100 to-wave-200 rounded-full border-6 border-mint-500 shadow-2xl relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/40 to-transparent"></div>
          <%= image_tag "logo.png", class: "w-14 h-14 relative z-10 filter drop-shadow-lg", alt: "Bodyboard Archive Logo" %>
        </div>
      <% end %>
      
      <h1 class="text-3xl md:text-5xl font-black mb-4 uppercase tracking-wider">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-mint-500 via-coral-500 to-ocean-600 transform -skew-x-6 inline-block">
          WELCOME
        </span>
        <br>
        <span class="text-2xl md:text-4xl text-wave-100 font-black tracking-widest transform skew-x-3 inline-block">
          BACK
        </span>
      </h1>
    </header>

    <!-- Main Form Card -->
    <div class="max-w-md mx-auto">
      <div class="bg-gradient-to-r from-mint-500 via-coral-500 to-ocean-500 p-1 rounded-2xl shadow-2xl mb-8">
        <div class="bg-wave-100 rounded-xl p-8">
          
          <!-- Form Header -->
          <div class="text-center mb-8">
            <h2 class="text-2xl md:text-3xl font-black text-ocean-900 uppercase tracking-wider mb-2">
              LOG IN
            </h2>
            <div class="w-16 h-1 bg-gradient-to-r from-mint-500 to-coral-500 mx-auto mb-4"></div>
            <p class="text-ocean-700 font-bold italic">Time to get back in the water!</p>
          </div>

          <!-- Flash Messages -->
          <% if notice %>
            <div class="mb-6 p-4 bg-mint-100 border-4 border-mint-500 rounded-lg">
              <p class="text-mint-800 font-bold text-sm uppercase tracking-wider"><%= notice %></p>
            </div>
          <% end %>
          
          <% if alert %>
            <div class="mb-6 p-4 bg-coral-100 border-4 border-coral-500 rounded-lg">
              <p class="text-coral-800 font-bold text-sm uppercase tracking-wider"><%= alert %></p>
            </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

            <!-- Email Field -->
            <div>
              <%= f.label :email, class: "block text-ocean-900 font-black uppercase tracking-wider text-sm mb-2" %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email",
                  class: "w-full px-4 py-3 bg-white border-4 border-ocean-400 rounded-lg text-ocean-900 font-semibold placeholder-ocean-500 focus:border-mint-500 focus:outline-none transition-colors duration-200",
                  placeholder: "your.email@example.com" %>
            </div>

            <!-- Password Field -->
            <div>
              <%= f.label :password, class: "block text-ocean-900 font-black uppercase tracking-wider text-sm mb-2" %>
              <%= f.password_field :password, 
                  autocomplete: "current-password",
                  class: "w-full px-4 py-3 bg-white border-4 border-ocean-400 rounded-lg text-ocean-900 font-semibold placeholder-ocean-500 focus:border-coral-500 focus:outline-none transition-colors duration-200",
                  placeholder: "Enter your password" %>
            </div>

            <!-- Remember Me -->
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "w-5 h-5 text-mint-500 bg-white border-4 border-ocean-400 rounded focus:ring-mint-500 focus:ring-2" %>
                <%= f.label :remember_me, "Keep me logged in", class: "ml-3 text-ocean-900 font-bold text-sm uppercase tracking-wider" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="pt-4">
              <%= f.submit "PADDLE OUT!", class: "w-full bg-mint-500 hover:bg-mint-600 text-white px-6 py-4 text-lg font-black uppercase tracking-wider shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 border-4 border-mint-400 cursor-pointer" %>
            </div>
          <% end %>

          <!-- Google OAuth & Links -->
          <div class="mt-6 pt-6 border-t-2 border-ocean-200">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
      
      <!-- Back to Home -->
      <div class="text-center">
        <%= link_to root_path, class: "text-wave-300 hover:text-wave-100 font-bold text-sm uppercase tracking-wider transition-colors duration-200" do %>
          ‚Üê Back to the stash
        <% end %>
      </div>
      
    </div>
  </div>
</div>
