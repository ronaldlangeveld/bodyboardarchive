<div class="min-h-screen bg-gray-900 relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-20 w-64 h-1 bg-ocean-400"></div>
    <div class="absolute top-40 right-32 w-48 h-1 bg-ocean-500"></div>
    <div class="absolute bottom-32 left-1/3 w-56 h-1 bg-ocean-400"></div>
  </div>
  
  <div class="container mx-auto px-4 py-8 relative z-10">
    
    <header class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-24 h-24 mb-12 bg-ocean-600 shadow-xl relative overflow-hidden">
        <%= image_tag "logo.png", class: "w-16 h-16 relative z-10", alt: "Bodyboard Archive Logo" %>
      </div>
    
      <h1 class="text-4xl md:text-7xl font-black mb-8 uppercase tracking-wider text-white">
        <span class="block mb-2">
          BODYBOARD
        </span>
        <span class="text-3xl md:text-5xl text-ocean-400 font-bold tracking-widest block">
          ARCHIVE
        </span>
      </h1>

      <div class="bg-ocean-800 border-l-4 border-ocean-400 p-8 mb-12 max-w-4xl mx-auto shadow-lg">
        <p class="text-2xl md:text-3xl font-bold text-white uppercase tracking-wide mb-3">
          THE ULTIMATE ARCHIVE
        </p>
        <p class="text-lg md:text-xl text-gray-300 font-medium">
          Preserving bodyboarding history, one session at a time
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <button class="bg-ocean-600 hover:bg-ocean-500 text-white px-8 py-4 font-semibold uppercase tracking-wide shadow-lg transition-colors duration-200">
          Browse Archive
        </button>
        <button class="border-2 border-ocean-400 text-ocean-400 hover:bg-ocean-400 hover:text-white px-8 py-4 font-semibold uppercase tracking-wide transition-all duration-200">
          Watch Videos
        </button>
      </div>
    </header>
    <section class="mb-20">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-4 uppercase tracking-wide">
          Featured Archive
        </h2>
        <div class="w-24 h-0.5 bg-ocean-400 mx-auto mb-4"></div>
        <p class="text-gray-400 text-lg font-medium">Curated selections from bodyboarding's finest moments</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="group bg-gray-800 shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
          <div class="aspect-[4/3] bg-gradient-to-br from-ocean-600 to-ocean-800 relative overflow-hidden">
            <div class="absolute top-4 left-4">
              <span class="bg-ocean-500 text-white px-3 py-1 text-sm font-semibold uppercase tracking-wide">
                FEATURED
              </span>
            </div>
            <div class="absolute bottom-4 right-4">
              <div class="bg-gray-900/80 text-white px-2 py-1 text-xs font-medium rounded">
                PHOTO
              </div>
            </div>
          </div>
          <div class="p-6 bg-gray-800">
            <h3 class="text-xl font-bold text-white mb-3 uppercase tracking-wide">
              Pipeline Barrel
            </h3>
            <p class="text-gray-300 mb-4 font-medium leading-relaxed">
              Perfect tube riding captured during a pristine Hawaiian session. Technical precision meets raw power.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-ocean-400 font-medium text-sm">John Doe</span>
              <span class="text-gray-500 text-sm">2 days ago</span>
            </div>
          </div>
        </div>

        <div class="group bg-gray-800 shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
          <div class="aspect-[4/3] bg-gradient-to-br from-ocean-700 to-gray-800 relative overflow-hidden">
            <div class="absolute top-4 left-4">
              <span class="bg-ocean-600 text-white px-3 py-1 text-sm font-semibold uppercase tracking-wide">
                CONTEST
              </span>
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-16 h-16 bg-gray-900/80 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
            <div class="absolute bottom-4 right-4">
              <div class="bg-gray-900/80 text-white px-2 py-1 text-xs font-medium rounded">
                VIDEO
              </div>
            </div>
          </div>
          <div class="p-6 bg-gray-800">
            <h3 class="text-xl font-bold text-white mb-3 uppercase tracking-wide">
              World Championship Heat
            </h3>
            <p class="text-gray-300 mb-4 font-medium leading-relaxed">
              Final heat from the world championships showcasing elite-level bodyboarding in overhead surf.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-ocean-400 font-medium text-sm">Jane Smith</span>
              <span class="text-gray-500 text-sm">1 week ago</span>
            </div>
          </div>
        </div>
        <div class="group bg-gray-800 shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
          <div class="aspect-[4/3] bg-gradient-to-br from-ocean-600 to-gray-700 relative overflow-hidden">
            <div class="absolute top-4 left-4">
              <span class="bg-gray-700 text-white px-3 py-1 text-sm font-semibold uppercase tracking-wide">
                RIDER PROFILE
              </span>
            </div>
            <div class="absolute bottom-4 right-4">
              <div class="bg-gray-900/80 text-white px-2 py-1 text-xs font-medium rounded">
                PROFILE
              </div>
            </div>
          </div>
          <div class="p-6 bg-gray-800">
            <h3 class="text-xl font-bold text-white mb-3 uppercase tracking-wide">
              Mike Rodriguez
            </h3>
            <p class="text-gray-300 mb-4 font-medium leading-relaxed">
              Hawaiian professional with two decades of experience in heavy water conditions worldwide.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-ocean-400 font-medium text-sm">Professional</span>
              <span class="text-gray-500 text-sm">Active</span>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="mb-20">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-4 uppercase tracking-wide">
          Browse Collection
        </h2>
        <div class="w-24 h-0.5 bg-ocean-400 mx-auto mb-4"></div>
        <p class="text-gray-400 text-lg font-medium">Explore decades of bodyboarding history and culture</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="group bg-gray-800 border border-gray-700 p-8 text-center hover:bg-gray-700 transition-all duration-300 cursor-pointer shadow-lg">
          <div class="w-16 h-16 bg-ocean-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 15.5A3.5 3.5 0 0 1 8.5 12A3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5 3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97c0-.33-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.39-1.06-.73-1.69-.98l-.37-2.65A.506.506 0 0 0 14 2h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.22-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1c0 .33.03.65.07.97L2.46 14.6c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.31.61.22l2.49-1c.52.39 1.06.73 1.69.98l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.25 1.17-.59 1.69-.98l2.49 1c.22.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.66Z"/>
            </svg>
          </div>
          <h3 class="text-white font-bold text-lg uppercase tracking-wide mb-2">Photography</h3>
          <p class="text-gray-400 font-medium text-sm">12,453 images</p>
        </div>
        
        <div class="group bg-gray-800 border border-gray-700 p-8 text-center hover:bg-gray-700 transition-all duration-300 cursor-pointer shadow-lg">
          <div class="w-16 h-16 bg-ocean-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          <h3 class="text-white font-bold text-lg uppercase tracking-wide mb-2">Video</h3>
          <p class="text-gray-400 font-medium text-sm">3,421 clips</p>
        </div>
        
        <div class="group bg-gray-800 border border-gray-700 p-8 text-center hover:bg-gray-700 transition-all duration-300 cursor-pointer shadow-lg">
          <div class="w-16 h-16 bg-ocean-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16 8c0 2.21-1.79 4-4 4s-4-1.79-4-4 1.79-4 4-4 4 1.79 4 4zM12 14c-4.42 0-8 1.79-8 4v2h16v-2c0-2.21-3.58-4-8-4z"/>
            </svg>
          </div>
          <h3 class="text-white font-bold text-lg uppercase tracking-wide mb-2">Riders</h3>
          <p class="text-gray-400 font-medium text-sm">892 profiles</p>
        </div>
        
        <div class="group bg-gray-800 border border-gray-700 p-8 text-center hover:bg-gray-700 transition-all duration-300 cursor-pointer shadow-lg">
          <div class="w-16 h-16 bg-ocean-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4 4h7l2-2h6a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2m8 9a2.5 2.5 0 0 0 2.5-2.5A2.5 2.5 0 0 0 12 8a2.5 2.5 0 0 0-2.5 2.5A2.5 2.5 0 0 0 12 13z"/>
            </svg>
          </div>
          <h3 class="text-white font-bold text-lg uppercase tracking-wide mb-2">Photographers</h3>
          <p class="text-gray-400 font-medium text-sm">156 shooters</p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="mb-16">
      <div class="bg-gray-800 border border-gray-700 shadow-xl">
        <div class="p-12 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 uppercase tracking-wide">
            Join the Archive
          </h2>
          <div class="w-20 h-0.5 bg-ocean-400 mx-auto mb-8"></div>
          <p class="text-lg md:text-xl text-gray-300 font-medium mb-10 leading-relaxed max-w-2xl mx-auto">
            Contribute to bodyboarding's digital legacy. Share your content, connect with the community, and help preserve our sport's history.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <%= link_to new_user_registration_path, class: "bg-ocean-600 hover:bg-ocean-500 text-white px-8 py-4 text-lg font-semibold uppercase tracking-wide shadow-lg transition-colors duration-200 text-center no-underline" do %>
              Create Account
            <% end %>
            <%= link_to new_user_session_path, class: "border-2 border-ocean-400 text-ocean-400 hover:bg-ocean-400 hover:text-white px-8 py-4 text-lg font-semibold uppercase tracking-wide transition-all duration-200 text-center no-underline" do %>
              Sign In
            <% end %>
          </div>
        </div>
      </div>
    </section>

  </div>
</div>