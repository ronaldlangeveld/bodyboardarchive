<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">
          <%= @profile.first_name %> <%= @profile.last_name %>
        </h1>
        <p class="text-gray-600 text-lg">@<%= @profile.username %></p>
        <% if @profile.countries.any? %>
          <p class="text-sm text-gray-500 mt-2">
            <%= @profile.countries.map(&:name).join(', ') %>
          </p>
        <% end %>
      </div>
      
      <div class="flex space-x-2">
        <% if @profile.unclaimed? && user_signed_in? %>
          <%= link_to "Claim Profile", claim_profile_path(@profile), 
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <% elsif @profile.user == current_user %>
          <%= link_to "Edit Profile", edit_profile_path(@profile), 
              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>
      </div>
    </div>

    <% if @profile.unclaimed? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              This profile is unclaimed. If this is your profile, you can claim it to manage your information.
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Profile Type</h3>
        <div class="space-y-1">
          <% if @profile.is_rider %>
            <span class="inline-block bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded">Rider</span>
          <% end %>
          <% if @profile.is_photographer %>
            <span class="inline-block bg-green-100 text-green-800 text-sm px-2 py-1 rounded">Photographer</span>
          <% end %>
        </div>
      </div>

      <% if @profile.bio.present? %>
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Bio</h3>
          <p class="text-gray-700"><%= @profile.bio %></p>
        </div>
      <% end %>
    </div>

    <div class="mt-8 text-center">
      <%= link_to "← Back to Profiles", profiles_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>
