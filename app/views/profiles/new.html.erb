<div class="min-h-screen bg-ocean-900 relative overflow-hidden">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-32 h-32 border-2 border-mint-400 rotate-45"></div>
    <div class="absolute top-32 right-20 w-24 h-24 border-2 border-coral-400 rotate-12"></div>
    <div class="absolute bottom-20 left-1/4 w-28 h-28 border-2 border-wave-400 -rotate-12"></div>
    <div class="absolute bottom-40 right-10 w-20 h-20 border-2 border-mint-400 rotate-45"></div>
  </div>
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-ocean-700/5 to-transparent bg-repeat-y opacity-30" style="background-size: 100% 4px;"></div>
  
  <div class="container mx-auto px-4 py-8 relative z-10">
    <div class="max-w-2xl mx-auto">
      
      <!-- Header Section -->
      <header class="text-center mb-12">
        <h1 class="text-4xl md:text-6xl font-black mb-6 uppercase tracking-wider">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-coral-500 via-mint-500 to-ocean-600 transform -skew-x-6 inline-block">
            CREATE YOUR
          </span>
          <br>
          <span class="text-3xl md:text-5xl text-wave-100 font-black tracking-widest transform skew-x-3 inline-block">
            PROFILE
          </span>
        </h1>
        <div class="w-32 h-1 bg-gradient-to-r from-coral-500 to-mint-500 mx-auto mb-4"></div>
        <p class="text-wave-300 text-lg font-semibold italic">Join the crew and showcase your stoke!</p>
      </header>

      <!-- Profile Form -->
      <div class="bg-gradient-to-r from-coral-500 via-mint-500 to-ocean-500 p-1 rounded-2xl shadow-2xl mb-8">
        <div class="bg-wave-100 rounded-xl p-8">
          
          <%= form_with model: @profile, local: true, class: "space-y-6" do |form| %>
            <% if @profile.errors.any? %>
              <div class="bg-gradient-to-r from-coral-400 to-coral-500 p-1 rounded-xl mb-6">
                <div class="bg-wave-100 rounded-lg p-4">
                  <h3 class="text-lg font-black text-coral-900 mb-2 uppercase tracking-wide">
                    üö® WHOOPS! ERRORS DETECTED
                  </h3>
                  <ul class="list-disc list-inside text-coral-800 font-semibold">
                    <% @profile.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <!-- Name Fields -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :first_name, class: "block text-sm font-black text-ocean-900 mb-2 uppercase tracking-wide" do %>
                  üèÑ‚Äç‚ôÇÔ∏è FIRST NAME
                <% end %>
                <%= form.text_field :first_name, 
                    class: "w-full px-4 py-3 border-4 border-coral-400 rounded-lg text-ocean-900 font-bold placeholder-ocean-500 focus:border-coral-600 focus:outline-none shadow-lg",
                    placeholder: "Your first name" %>
              </div>

              <div>
                <%= form.label :last_name, class: "block text-sm font-black text-ocean-900 mb-2 uppercase tracking-wide" do %>
                  üåä LAST NAME
                <% end %>
                <%= form.text_field :last_name, 
                    class: "w-full px-4 py-3 border-4 border-mint-400 rounded-lg text-ocean-900 font-bold placeholder-ocean-500 focus:border-mint-600 focus:outline-none shadow-lg",
                    placeholder: "Your last name" %>
              </div>
            </div>

            <!-- Username -->
            <div>
              <%= form.label :username, class: "block text-sm font-black text-ocean-900 mb-2 uppercase tracking-wide" do %>
                ü§ô USERNAME
              <% end %>
              <%= form.text_field :username, 
                  class: "w-full px-4 py-3 border-4 border-ocean-400 rounded-lg text-ocean-900 font-bold placeholder-ocean-500 focus:border-ocean-600 focus:outline-none shadow-lg",
                  placeholder: "Choose a rad username" %>
              <p class="text-xs text-ocean-600 font-semibold mt-1">Must be 3-30 characters, letters, numbers, underscores, and hyphens only</p>
            </div>

            <!-- Bio -->
            <div>
              <%= form.label :bio, class: "block text-sm font-black text-ocean-900 mb-2 uppercase tracking-wide" do %>
                üìù BIO
              <% end %>
              <%= form.text_area :bio, rows: 4, 
                  class: "w-full px-4 py-3 border-4 border-wave-400 rounded-lg text-ocean-900 font-bold placeholder-ocean-500 focus:border-wave-600 focus:outline-none shadow-lg resize-none",
                  placeholder: "Tell us about your bodyboarding journey..." %>
            </div>

            <!-- Date of Birth -->
            <div>
              <%= form.label :date_of_birth, class: "block text-sm font-black text-ocean-900 mb-2 uppercase tracking-wide" do %>
                üéÇ DATE OF BIRTH
              <% end %>
              <%= form.date_field :date_of_birth, 
                  class: "w-full px-4 py-3 border-4 border-coral-400 rounded-lg text-ocean-900 font-bold focus:border-coral-600 focus:outline-none shadow-lg" %>
            </div>

            <!-- Profile Type -->
            <div>
              <label class="block text-sm font-black text-ocean-900 mb-4 uppercase tracking-wide">
                üèÜ WHAT'S YOUR STOKE?
              </label>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-gradient-to-r from-coral-400 to-coral-500 p-1 rounded-xl">
                  <div class="bg-wave-100 rounded-lg p-4">
                    <%= form.check_box :is_rider, class: "sr-only", id: "profile_is_rider" %>
                    <%= form.label :is_rider, class: "flex items-center cursor-pointer" do %>
                      <div class="w-6 h-6 border-4 border-coral-500 rounded mr-3 flex items-center justify-center">
                        <div class="w-3 h-3 bg-coral-500 rounded hidden check-indicator"></div>
                      </div>
                      <span class="text-lg font-black text-ocean-900 uppercase tracking-wide">
                        üèÑ‚Äç‚ôÇÔ∏è RIDER
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="bg-gradient-to-r from-mint-400 to-mint-500 p-1 rounded-xl">
                  <div class="bg-wave-100 rounded-lg p-4">
                    <%= form.check_box :is_photographer, class: "sr-only", id: "profile_is_photographer" %>
                    <%= form.label :is_photographer, class: "flex items-center cursor-pointer" do %>
                      <div class="w-6 h-6 border-4 border-mint-500 rounded mr-3 flex items-center justify-center">
                        <div class="w-3 h-3 bg-mint-500 rounded hidden check-indicator"></div>
                      </div>
                      <span class="text-lg font-black text-ocean-900 uppercase tracking-wide">
                        üì∏ PHOTOGRAPHER
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
              <p class="text-xs text-ocean-600 font-semibold mt-2">You can be both! Select what applies to you.</p>
            </div>

            <!-- Submit Button -->
            <div class="flex flex-col sm:flex-row gap-4 pt-6">
              <%= link_to root_path, 
                  class: "flex-1 bg-ocean-500 hover:bg-ocean-600 text-white py-4 px-6 text-lg font-black uppercase tracking-wider text-center shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 border-4 border-ocean-400 no-underline" do %>
                ‚Üê BACK TO HOME
              <% end %>
              
              <%= form.submit "ü§ô CREATE MY PROFILE!", 
                  class: "flex-1 bg-coral-500 hover:bg-coral-600 text-white py-4 px-6 text-lg font-black uppercase tracking-wider text-center shadow-xl hover:shadow-2xl transform hover:-translate-y-1 hover:rotate-1 transition-all duration-300 border-4 border-coral-400 cursor-pointer" %>
            </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>

<script>
  // Handle custom checkbox styling
  document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
      const indicator = checkbox.parentElement.querySelector('.check-indicator');
      
      function updateCheckbox() {
        if (checkbox.checked) {
          indicator.classList.remove('hidden');
        } else {
          indicator.classList.add('hidden');
        }
      }
      
      updateCheckbox(); // Initial state
      checkbox.addEventListener('change', updateCheckbox);
    });
  });
</script>
